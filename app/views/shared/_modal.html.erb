<div
  data-controller="modal"
  id="modal-wrapper"
  class="hidden relative z-10"
  aria-labelledby="modal-title"
  role="dialog"
  aria-modal="true"
>  
  <div class="hidden" id="show-modal-div" data-action="click->modal#showModal"></div>
  <div
    id="modal-backdrop"
    class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
    data-transition-enter="ease-out duration-300"
    data-transition-enter-start="opacity-0"
    data-transition-enter-end="opacity-100"
    data-transition-leave="ease-in duration-200"
    data-transition-leave-start="opacity-100"
    data-transition-end="opacity-0" 
  ></div>
  <div class="fixed z-10 inset-0 overflow-y-auto">  
    <div class="flex items-end sm:items-center justify-center min-h-full p-4 text-center sm:p-0">
      <div
        id="modal-panel"
        class="hidden relative bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all w-2/4 text-sm"
        data-transition-enter="ease-out duration-300"
        data-transition-enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
        data-transition-enter-end="opacity-100 translate-y-0 sm:scale-100"
        data-transition-leave="ease-in duration-200"
        data-transition-leave-start="opacity-100 translate-y-0 sm:scale-100"
        data-transition-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
        >

        <div class="flex mb-5">
          <div class="flex-none cursor-pointer" data-modal-target="closeButton">
            <svg class="w-4 h-4 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 8 14">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 1 1.3 6.326a.91.91 0 0 0 0 1.348L7 13"/>
            </svg>
          </div>
        </div>
        <div>
          <p class="font-bold tracking-wide">Title:</p>
          <p id="item-title" class="tracking-wide mb-5"></p>

          <p class="font-bold tracking-wide">Description:</p>
          <p id="item-description" class="tracling-wide mb-5"></p>
        </div>
      </div>
    </div>
  </div>
</div>  